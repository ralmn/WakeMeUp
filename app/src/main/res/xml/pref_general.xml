<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <CheckBoxPreference
        android:key="default_vibrate"
        android:title="@string/pref_title_vibrate"
        android:summary="@string/pref_description_vibrate"
        android:defaultValue="true" />

    <EditTextPreference
        android:key="default_snooze_time"
        android:defaultValue="10"
        android:inputType="numberSigned"
        android:title="@string/pref_title_snooze"
        android:summary="@string/pref_description_snooze"
        />


    <RingtonePreference
        android:key="default_ringtone"
        android:title="@string/pref_title_ringtone"
        android:summary="@string/pref_description_ringtone"
        android:ringtoneType="alarm"
        />


</PreferenceScreen>
