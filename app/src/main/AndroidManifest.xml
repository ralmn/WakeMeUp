<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.ralmn.wakemeup" >

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_icon2"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activities.AlarmListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name=".AlarmsProvider"
            android:authorities="fr.ralmn.wakemeup" >
        </provider>

        <activity
            android:name=".activities.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>

        <receiver
            android:name=".AlarmReceiver"
            android:enabled="false" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <service
            android:name=".services.AlarmService"
            android:enabled="true"
            android:exported="true" >
        </service>

        <activity
            android:name=".activities.AlarmActivity"
            android:configChanges="orientation|screenSize|keyboardHidden|keyboard|navigation"
            android:excludeFromRecents="true"
            android:label="@string/title_activity_alarm"
            android:showOnLockScreen="true"
            android:taskAffinity=""
            android:theme="@style/AlarmFullTheme"
            android:windowSoftInputMode="stateAlwaysHidden" >
        </activity>
        <activity android:name=".activities.AboutActivity" >
        </activity>

        <service
            android:name=".services.CalculateAlarmsService"
            android:enabled="true"
            android:exported="false" >
        </service>
    </application>

</manifest>
